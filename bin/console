#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Hytmng\PhpShell\Shell;
use Hytmng\PhpShell\Command\PrintCommand;
use Hytmng\PhpShell\Command\ExitCommand;
use Hytmng\PhpShell\Command\ListCommand;
use Symfony\Component\Console\Style\SymfonyStyle;

$shell = Shell::createForConsole('psh', '1.0.0a');
$shell->addCommand(new PrintCommand());
$shell->addCommand(new ExitCommand());
$shell->addCommand(new ListCommand());

function main(Shell $shell)
{
	$shell->launch();

	while ($shell->isRunning()) {
		$userInput = readline($shell->getPrompt());

		if (trim($userInput) === '') {
			continue;
		}

		readline_add_history($userInput);
		$shell->handleUserInput($userInput);

		$input = $shell->getInput();
		$output = $shell->getOutput();

		try {
			$commandName = $input->getFirstArgument();
			$command = $shell->findCommand($commandName);
			$shell->execCommand($command);
		} catch (\Throwable $e) {
			$output->writeln('<error>' . $e->getMessage() . '</error>');
		}
	}
}

main($shell);
